{
  "name": "transcript-extractor-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for transcript extraction system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration", 
    "test:e2e": "jest tests/e2e",
    "test:ci": "jest --coverage --watchAll=false"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/node_modules/**"
    ],
    "coverageReporters": ["text", "html", "json-summary"],
    "testMatch": [
      "**/__tests__/**/*.(test|spec).(js|ts)",
      "**/tests/**/*.(test|spec).(js|ts)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}